    <!-- game over -->
    <androidx.cardview.widget.CardView
        android:id="@+id/game_CV_gameOverBoard"
        android:layout_width="330dp"
        android:layout_height="440dp"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="#D064B6DC"
        app:cardCornerRadius="50dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/game_LBL_gameOver"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:autoSizeTextType="uniform"
                android:text="Game Over"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold|italic"
                tools:targetApi="o"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/game_LBL_final_score"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:autoSizeTextType="uniform"
                android:text="your score: "
                android:textAlignment="center"
                android:textColor="@color/black"
                tools:ignore="HardcodedText"
                android:layout_below="@id/game_LBL_gameOver"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/game_IET_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter Your Name"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/game_BTN_confirm"
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:backgroundTint="#B2503E71"
                android:layout_gravity="center"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="10dp"
                android:text="Confirm"
                android:textAllCaps="false"
                app:cornerRadius="20dp"
                tools:ignore="HardcodedText">

            </com.google.android.material.button.MaterialButton>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/game_ING_end"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="3"
                app:srcCompat="@drawable/ic_end_game">
            </androidx.appcompat.widget.AppCompatImageView>


        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.cardview.widget.CardView>
    <!-- game over //-->


</RelativeLayout>

